@model MineHControlReports.Models.menuReport

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar um novo Relatório</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>menuReport</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MenuId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.MenuId,new SelectList(ViewBag.menuref,"Id","Name"),String.Empty)
            @Html.ValidationMessageFor(model => model.MenuId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Link)
            @Html.ValidationMessageFor(model => model.Link)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeReport)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeReport)
            @Html.ValidationMessageFor(model => model.TypeReport)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OrderBy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderBy)
            @Html.ValidationMessageFor(model => model.OrderBy)
        </div>

        <p>
            <input type="submit" value="Criar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
